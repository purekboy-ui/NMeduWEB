{
    "hosting": {
        "public": ".",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**",
            "adrenal-cortex.html",
            "bone-scan.html",
            "cerebral-perfusion.html",
            "fdg-pet.html",
            "gallium-67.html",
            "i-131.html",
            "lymph-scintigraphy.html",
            "myocardial-perfusion.html",
            "parathyroid.html",
            "ra-223.html",
            "renal-cortical.html",
            "renal-scan.html",
            "salivary-gland.html",
            "thyroid-scan.html",
            "trodat-1.html"
        ],
        "headers": [
            {
                "source": "**/*.@(jpg|jpeg|gif|png|svg|webp)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "public, max-age=31536000"
                    }
                ]
            },
            {
                "source": "**/*.@(html|css|js)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "no-cache, no-store, must-revalidate"
                    }
                ]
            }
        ]
    }
}